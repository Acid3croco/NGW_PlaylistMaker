<div class="bd-navbar navbar has-shadow is-spaced">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
            <img src="/images/pm-logo-new.png">
        </a>
    </div>

    <div class="navbar-menu">
        <div class="navbar-start">
            <a href="/explore/{{session.user_id}}" class="navbar-item">
                <i class="material-icons as-text">explore</i>
                Explore
            </a>
            {{#if session.user_id}}
                <a href="/my-music/{{session.user_id}}" class="navbar-item">
                    <i class="material-icons as-text">album</i>
                    My Music
                </a>
            {{/if}}
            <a href="/users" class="navbar-item">
                <i class="material-icons as-text">supervisor_account</i>
                Users
            </a>
            <div class="navbar-item has-dropdown is-hoverable">
                <a class="navbar-link">
                    More
                </a>
                <div class="navbar-dropdown">
                    <a href="/about" class="navbar-item">
                        <i class="material-icons as-text">copyright</i>
                        About
                    </a>
                    <a href="/contact" class="navbar-item">
                        <i class="material-icons as-text">contact_mail</i>
                        Contact
                    </a>
                </div>
            </div>
        </div>

        <div class="navbar-end">
            <div class="navbar-item">
                {{#if session.user_id}}
                    <div>
                        <a href="#modalLogout" class="button is-light">
                            Log out
                        </a>
                    </div>
                {{else}}
                    <div>
                        <a href="/login" class="button is-light">
                            Log in
                        </a>
                        <a href="/signup" class="sign-button button is-primary">
                            <strong>Sign up</strong>
                        </a>
                    </div>
                {{/if}}

                {{!-- MODALS --}}

                <div id="modalLogout" class="overlay">
                    <div class="popup">
                        <div class="columns">
                            <div class="column is-11">
                                <h1 class="title is-1">Logout ?</h1>
                            </div>
                            <div class="column">
                                <a class="close is-danger" href="#">&times;</a>
                            </div>
                        </div>
                        <div>
                            <h5 class="subtitle is-5">Are you sure you want to Logout ?</h5>
                            <form action="/accounts/logout" method="POST">
                                <div class="field is-grouped">
                                    <div class="control">
                                        <a href="#" class="button is-light">
                                            Cancel
                                        </a>
                                    </div>
                                    <div class="control">
                                        <button class="button is-primary" type="submit">
                                            Logout
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div id="modalAddPlaylist" class="overlay">
                    <div class="popup">
                        <h1 class="title is-1">New Playlist</h1>
                        <form action="/playlists/add" method="POST">
                            <div class="field">
                                <p class="control">
                                    <input class="input" placeholder="Playlist name" name="name">
                                </p>
                            </div>
                            <div class="filed">
                                <div class="control">
                                    <label class="checkbox">
                                        <input type="checkbox" name="ispublic" checked="">
                                        Make public
                                    </label>
                                </div>
                            </div>
                            <br>
                            <div class="field is-grouped">
                                <div class="control">
                                    <a href="#" class="button is-light">
                                        Cancel
                                    </a>
                                </div>
                                <div class="control">
                                    <button class="button is-primary" type="submit">
                                        Create
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="modalAddSong" class="overlay">
                    <div class="popup">
                        <h1 class="title is-1">Add Song</h1>
                        <form method="POST" action="/songs/add">
                            <div class="field">
                                <p class="control">
                                <div class="field">
                                    <div class="control">
                                        <input class="input" placeholder="Song name" name="name">
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <input class="input" placeholder="Artist name" name="artist">
                                    </div>
                                </div>
                                <input type="hidden" name="playlistid" value={{playlist.playlist_id}}>
                                </p>
                            </div>
                            <div class="field is-grouped">
                                <div class="control">
                                    <a href="#" class="button is-light">
                                        Cancel
                                    </a>
                                </div>
                                <div class="control">
                                    <button class="button is-primary" type="submit">
                                        Add
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="modalEditPlaylist" class="overlay">
                    <div class="popup">
                        <h1 class="title is-1">Edit Playlist Name</h1>
                        <form method="POST" action="/playlists/edit/name">
                            <div class="field">
                                <p class="control">
                                    <input class="input" placeholder="Playlist name" name="name">
                                    <input type="hidden" name="playlistid" value={{playlist.playlist_id}}>
                                </p>
                            </div>
                            <div class="field is-grouped">
                                <div class="control">
                                    <a href="#" class="button is-light">
                                        Cancel
                                    </a>
                                </div>
                                <div class="control">
                                    <button class="button is-info" type="submit">
                                        Edit
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="modalDeletePlaylist" class="overlay">
                    <div class="popup">
                        <h1 class="title is-1">Delete Playlist ?</h1>
                        <div>
                            <h5 class="subtitle is-5">Are you sure you want to delete this playlist ?</h5>
                            <form action="/playlists/delete" method="POST">
                                <input type="hidden" name="playlist_id" value={{playlist.playlist_id}}>
                                <div class="field is-grouped">
                                    <div class="control">
                                        <a href="#" class="button is-light">
                                            Cancel
                                        </a>
                                    </div>
                                    <div class="control">
                                        <button class="button is-danger" type="submit">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                {{!-- END MODALS --}}

            </div>
        </div>
    </div>
</div>