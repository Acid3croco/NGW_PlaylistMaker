{{#> navbar}}
<h1 class="title is-1 is-spaced">
    Explore
</h1>
{{#if allplaylists}}
<div class="columns is-multiline">
    {{#each allplaylists}}
    <div class="column is-one-quarter">
        {{> playlistCard this }}
    </div>
    {{/each}}
</div>
{{else}}
<h5 class="subtitle is-5">There is no playlist...</h5>
{{/if}}
<br />

{{#if session.user_id}}
    <h1 class="title is-1 is-spaced">
        Your playlists
    </h1>
    {{#if myplaylists}}
    <div class="columns is-multiline">
        {{#each myplaylists}}
        <div class="column is-one-quarter">
            {{> playlistCard this }}
        </div>
        {{/each}}
    </div>
    {{else}}
    <h5 class="subtitle is-5">You have no playlists, lets add some</h5>
    {{/if}}
{{/if}}
{{/navbar}}