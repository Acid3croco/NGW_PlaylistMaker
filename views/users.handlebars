{{#> navbar}}
    <h1 class="title is-1 is-spaced">
        Users
    </h1>

    {{#if users}}
        <table class="table is-hoverable is-fullwidth is-striped">
            <tbody>
                {{#each users}}
                    <tr>
                        <td>
                            <a href="/my-music/{{user_id}}">
                                <h3 class="subtitle is-3">{{username}}</h3>
                            </a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="subtitle is-3">
            <p>There is no users registered yet, <a href="/signup">be the first one !</a></p>
        </div>
    {{/if}}
{{/navbar}}