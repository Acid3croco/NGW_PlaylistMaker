{{#> navbar}}
{{#equal session.user_id user.user_id }}
<h1 class="title is-1 is-spaced">
    Your Playlists
</h1>
<a href="#modalAddPlaylist" class="subtitle is-5 is-spaced button is-primary">Create Playlist</a>
{{else}}
<h1 class="title is-1 is-spaced">
    {{user.username}}'s shared Playlists
</h1>
{{/equal}}

<br />
<div class="columns is-multiline">
    {{#each playlists}}
    <div class="column is-one-quarter">
        {{> playlistCard this user=../user}}
    </div>
    {{/each}}
</div>
{{#unless playlists}}
{{#equal session.user_id user.user_id}}
<h3 class="subtitle is-3">You have no playlists, <a href="#modalAddPlaylist"> create a new one!</a></h3>
{{else}}
<h3 class="subtitle is-3">{{user.username}} has no public playlists</h3>
{{/equal}}
{{/unless}}
{{/navbar}}